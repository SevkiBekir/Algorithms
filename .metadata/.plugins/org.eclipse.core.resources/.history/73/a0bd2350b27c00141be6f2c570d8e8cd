#include <iostream>
using namespace std;

int main() {
	cout << "How many numbers do you sort?"<< endl;
	int size,i,j,temp;
	cin >> size;
	int arNumber[size];
	cout << "Now, you can write the numbers you want."<< endl;
	for (i=0;i<size;i++)
	{
		cin >> arNumber[i];
	}
	cout << "The numbers are ";
	for (i=0;i<size;i++)
	{
		cout << arNumber[i] << " ";
	}
	cout << endl;



	return 0;
}
